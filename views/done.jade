extends layout

block content
  h1= title

  secton.container
    div.row
      div.col-xs-6.col-xs-offset-2
        input#task(type='text', class='form-control' autocomplete='off')
      div.col-xs-2
        button(id='modal-button' class='btn btn-primary btn-sm' data-toggle="modal" data-target="#modal-example") Start

  div(id='tabs')
    ul(class='nav nav-tabs')
      li(role='presentation' class='active')
        a(href='#panel1') Today &nbsp;
          span(class='badge') 10
      li(role='presentation')
        a(href='#panel2') 11/8 &nbsp;
          span(class='badge') 17
      li(role='presentation')
        a(href='#panel3') 11/7 &nbsp;
          span(class='badge') 4

    div(id='panel1' class='panel')
      secton.container
        div.row
          div.col-xs-12
            table(class='table table-striped table-condensed')
              - for (var i = 0; i < items.length; i++)
                tr
                  td
                    small= moment(items[i]['date']).format('YYYY/MM/DD HH:mm')
                  td
                    small= items[i]['task']
                  td(align='right')
                    button(type='button' class='btn btn-default btn-xs' onClick="deleteTask('#{items[i]['_id']}')") Ã—

  div(class='modal' id='modal-example' tabindex="-1")
    div(class="modal-dialog" role="document")
      div(class="modal-content")
        div(class='modal-header')
          p(id='modal-title')
          button(type='button' class="close" data-dismiss="modal")
        div(class='modal-body')
          h1(id='modal-message')
        div(class='modal-footer')
          button(type='button' class="btn btn-default" data-dismiss="modal") close

  code= content
