extends layout

block content
  h1= title

  secton.container
    div.row
      div.col-xs-6.col-xs-offset-2
        input#task(type='text', class='form-control')
      div.col-xs-2
        button(id='modal-button' class='btn btn-primary btn-sm' data-toggle="modal" data-target="#modal-example") Start

  div(id='tabs')
    ul(class='nav nav-tabs')
      - for (var i = 0; i < contents.length; i++){
      - var id = (i + 1);
      - var panelId = 'panel' + id;
        li(role='presentation')
          a(href='##{panelId}') #{contents[i].date} &nbsp;
            span(class='badge') #{contents[i].items.length}
      - }

    - for (var i = 0; i < contents.length; i++){
    - var id = (i + 1);
    - var panelId = 'panel' + id;
      div(id='#{panelId}' class='panel')
        secton.container
          div.row
            div.col-xs-12
              table(class='table table-striped table-condensed')
                - items = contents[i].items;
                - for (var j = 0; j < items.length; j++)
                  tr
                    td
                      small= moment(items[j]['date']).format('YYYY/MM/DD HH:mm')
                    td
                      small= items[j]['task']
                    td(align='right')
                      button(type='button' class='btn btn-default btn-xs' onClick="deleteTask('#{items[j]['_id']}')") Ã—
    - }

  div(class='modal' id='modal-example' tabindex="-1")
    div(class="modal-dialog" role="document")
      div(class="modal-content")
        div(class='modal-header')
          img(id="modal-img" width="24" src='')
          span &nbsp;&nbsp;
          span(id='modal-title')
          button(type='button' class="close" data-dismiss="modal")
        div(class='modal-body')
          h1(id='modal-message')
        div(class='modal-footer')
          button(type='button' class="btn btn-default" data-dismiss="modal") close

